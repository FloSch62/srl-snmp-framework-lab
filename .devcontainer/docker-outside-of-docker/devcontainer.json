{
    "image": "ghcr.io/srl-labs/containerlab/devcontainer-dood-slim:0.60.0-rc1",
    "runArgs": [
        "--network=host",
        "--pid=host",
        "--privileged"
    ],
    "mounts": [
        "type=bind,src=/run/docker/netns,dst=/run/docker/netns",
        "type=bind,src=/var/lib/docker,dst=/var/lib/docker",
        "type=bind,src=/lib/modules,dst=/lib/modules"
    ],
    "remoteEnv": {
        "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
    },
    "initializeCommand": [
        "bash",
        "-c",
        "mkdir -p /tmp && bash .devcontainer/convert-path.sh > /tmp/vars && source /tmp/vars"
    ],
    "workspaceMount": "source=${env:WORKSPACE_MOUNT_SOURCE},target=/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "bash .devcontainer/convert-path.sh > /tmp/vars && source /tmp/vars"
}
